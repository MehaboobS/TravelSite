<% layout("/layouts/boilerplate.ejs") %>

<div class="row mb-3">
    <h2 class="col-6 offset-3 ">SignUp for WanderLust</h2>
    <div class="col-6 offset-3">
     <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">username</label>
            <input type="text" name="user[username]" id='username' placeholder="enter username" class="form-control">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">email</label>
            <input type="text" name="user[email]" id='email' placeholder="enter email" class="form-control">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">password</label>
             <input type="password" name="user[password]" id='email' placeholder="enter password" class="form-control">
        </div>
        <button class="btn btn-success">
            SignUp
        </button>
     </form>
    </div>
</div>