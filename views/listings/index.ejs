<% layout("/layouts/boilerplate.ejs") %>
<body>
   <style>
      .filter{
         margin-top: 1rem;
         text-align: center;
         margin-right: 2rem;
         margin-top: 2rem;
         opacity: 0.7;
      }
      #filters{
         display: flex;
         flex-wrap: wrap;
      }
      .filter:hover{
         opacity: 1;
         cursor: pointer;
      }
      /* .trend a{
       text-decoration: none;
       display: inline;
      } */
   </style>
   
   
     <!-- <h3>All Listing</h3> -->
     <div id="filters">
      <form action="/listings/trending" method="get">
         <div class="filter ">
         
            <div><i class="fa-solid fa-fire"></i></div>
         
            <p type="button">Trending</p>
         
         </div>
      </form>
      <div class="filter">
         <div><i class="fa-solid fa-mountain-city"></i></div>
        Iconic Cities
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-umbrella-beach"></i></div>
        beachFonts
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-landmark"></i></div>
        Historical 
      </div>
      <div class="filter">
         <div> <i class="fa-solid fa-person-swimming"></i> </div>
       Amazoning Pools
      </div>
      <div class="filter">
         <div> <i class="fa-solid fa-tents"></i> </div>
         camping
      </div>
      <div class="filter">
         <div> <i class="fa-solid fa-tractor"></i> </div>
         Farms
      </div>
      
   <div class="filter">
      <div> <i class="fa-solid fa-plane-departure"></i> </div>
     Travel booking
   </div>

     </div>
     
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for( list of allListings ) { %>
          <a href="/listings/<%= list._id %>" class="listing-link">
            <div class="card col" style="width: 18rem;">
                <img class="card-img-top" src="<%=list.image%>" alt="Card image cap" style="height:20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                   <p class="card-text">
                  
                       <b> <%= list.title %></b>
                   <br>
                  Prize:&#8377;<%=list.prize%>/night
                   </p>
                </div>
              </div>
        </a>
        <% } %>
     </ul>
</body>
